<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfDescrActivity"
    android:background="@drawable/dwarf_warrior">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/edLogoIMG"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/nerdr_logo_large" />

        <TextView
            android:id="@+id/edProfileTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Description"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <EditText
            android:id="@+id/edProfileEditText"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:autoText="false"
            android:background="@drawable/rounded_edittext"
            android:ems="10"

            android:inputType="textMultiLine"
            android:text="This is your profile..." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/edSaveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="30dp"
                android:background="@color/colorAccent"
                android:padding="0dp"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:text="Save" />

            <Button
                android:id="@+id/edExitBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="30dp"
                android:background="@color/colorAccent"
                android:padding="0dp"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>